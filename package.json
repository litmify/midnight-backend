{
  "name": "sparcs-admin-backend",
  "version": "0.1.0",
  "description": "backend for sparcs-admin",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "tsc && node dist",
    "build:dev": "webpack --mode development --optimize-minimize --config webpack.config.js",
    "build:prod": "webpack --mode production --optimize-minimize --config webpack.config.js",
    "dev": "./node_modules/.bin/nodemon --watch src/ -e ts,tsx --exec \"eslint ./src/*.ts && ts-node -r tsconfig-paths/register ./src/index.ts\"",
    "lint": "eslint ./src/*.ts",
    "watch": "webpack-watch-server --config webpack.config.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint ./src/*.ts",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "joi": "^14.3.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "mongoose": "^5.7.1",
    "nanoid": "^2.1.7",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/joi": "^14.3.4",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/mongoose": "^5.5.17",
    "@types/nanoid": "^2.1.0",
    "@types/signale": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "nodemon": "^1.19.2",
    "prettier": "^1.19.1",
    "terser-webpack-plugin": "^2.1.2",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  }
}
